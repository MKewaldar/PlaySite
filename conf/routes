# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# An example controller showing a sample home page
#GET     /                           controllers.HomeController.index
# An example controller showing how to use dependency injection
GET     /count                      controllers.CountController.count
# An example controller showing how to write asynchronous code
GET     /message                    controllers.AsyncController.message

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)

## My web page
GET		/about/:name/:lastName					controllers.HomeController.about(name: String, lastName: String)

# My song manager
GET 	/									    controllers.SongController.index()
GET		/songs/create							controllers.SongController.create()
GET		/songs/:songId							controllers.SongController.show(songId: Integer)
GET		/songs/edit/:songId						controllers.SongController.edit(songId: Integer)
POST	/songs/edit								controllers.SongController.update()
POST	/songs/create							controllers.SongController.save()
GET		/songs/delete/:songId					controllers.SongController.delete(songId: Integer)
